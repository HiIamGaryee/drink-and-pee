{
  "manifest_version": 3,
  "name": "Drink & Pee",
  "version": "1.0",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": ["alarms", "scripting", "tabs", "notifications", "storage"],
  "content_scripts": [
    {
      "js": ["src/content.ts"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "banner.jpg",
        "banner1.png",
        "banner2.jpg",
        "banner3.jpg",
        "banner4.jpeg",
        "logo.png"
      ]
    }
  ]
}
